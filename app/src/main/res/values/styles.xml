<resources>

    <style name="Control" />

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SettingItemIcon" parent="Control">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/font_14sp</item>
        <item name="android:background">@drawable/recycler_item_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/dp_16</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawableRight">@mipmap/ic_next</item>
        <item name="android:drawablePadding">@dimen/dp_10</item>
    </style>

    <style name="SettingItem" parent="Control">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/recycler_item_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/dp_16</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- 单行 -->
    <style name="SingleLine" parent="Control">
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>


    <!-- popupwindow style -->
    <style name="PopupAnimation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_popmenu_show</item>
        <item name="android:windowExitAnimation">@anim/anim_popmenu_hide</item>
    </style>

    <!-- dialog -->
    <style name="MyDialog" parent="android:Theme.Dialog">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@drawable/loading_dialog_bg</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
