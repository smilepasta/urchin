<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.smilepasta.urchin.ui.photo.ImageSelectActivity">

    <com.smilepasta.urchin.widget.imageselectview.ImageSelectView
        android:id="@+id/image_select_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include layout="@layout/divide_1" />

    <LinearLayout
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <com.smilepasta.urchin.widget.ClearableEditText
            android:id="@+id/et_title"
            style="@style/EditText.Remark"
            android:maxLength="2000" />

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_upload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:background="@color/colorPrimary"
        android:text="@string/upload"
        android:textColor="@color/white" />

</LinearLayout>
