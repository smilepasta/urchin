<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.setting.SettingActivity">

    <TextView
        android:id="@+id/tv_language_switch"
        style="@style/SettingItemIcon"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/language_switch" />

    <include layout="@layout/divide_1" />

    <TextView
        style="@style/SettingItemIcon"
        android:text="@string/font_size" />

    <include layout="@layout/divide_1" />

    <LinearLayout
        android:id="@+id/ll_clean_cache"
        style="@style/SettingItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/clear_cache"
            android:textColor="@color/black"
            android:textSize="@dimen/font_14sp" />

        <TextView
            android:id="@+id/tv_cache_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:text="@string/clear_cache"
            android:textColor="@color/blackSub"
            android:textSize="@dimen/font_14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_next" />


    </LinearLayout>

    <include layout="@layout/divide_1" />

    <TextView
        android:id="@+id/tv_version_upgrade"
        style="@style/SettingItemIcon"
        android:text="@string/version_upgrade" />

    <include layout="@layout/divide_1" />

    <TextView
        android:id="@+id/tv_about_me"
        style="@style/SettingItemIcon"
        android:text="@string/about_me" />

</LinearLayout>
